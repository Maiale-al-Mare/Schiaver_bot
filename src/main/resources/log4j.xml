<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="fileAppenderTelegram" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="target/logs/telegram.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <appender name="fileAppenderSchiavo" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="target/logs/schiavo.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <appender name="fileAppenderUserInfo" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="target/logs/userInfo.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>

    <logger name="UserInfo" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="fileAppenderUserInfo" />
    </logger>

    <logger name="Schiavo" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="fileAppenderSchiavo" />
    </logger>

    <root>
        <priority value ="debug" />
        <appender-ref ref="fileAppenderTelegram" />
    </root>

</log4j:configuration>